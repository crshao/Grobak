<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="200dp"
        app:cardCornerRadius="12dp"
        >
        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:scaleType="fitXY"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_below="@+id/image"
                android:padding="10dp">
                <TextView
                    android:id="@+id/namaBarang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Benda"
                    android:fontFamily="@font/opensansbold"
                    android:textSize="12sp"
                    android:layout_margin="1dp"/>
                <TextView
                    android:id="@+id/kuantitasBarang"
                    android:layout_below="@id/namaBarang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="kuantitasBarang"
                    android:textSize="8sp"
                    android:fontFamily="@font/opensanslight"
                    android:layout_margin="1dp"
                    />
                <TextView
                    android:id="@+id/harga"
                    android:layout_below="@id/kuantitasBarang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensansbold"
                    android:text="Rp....."
                    android:textColor="#7BED8D"
                    android:layout_margin="1dp"
                    android:textSize="12sp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addButton"
                    android:layout_below="@id/harga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#7BED8D"
                    android:text="Add"
                    android:fontFamily="@font/opensansbold"
                    android:textSize="10sp"
                    android:padding="0dp"/>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    
</LinearLayout>